
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Premier élément de menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THE CRISPY"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Image et Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sann1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poulet,tomate,laitue,dinde fumee"
                android:textSize="14sp"
                android:paddingStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Deuxième élément de menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOT PASTRAMI"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Image et Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sann2"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patrami de boeuf,fondu,oignon caramilisee,
sauce barbecue"
                android:textSize="14sp"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </LinearLayout>




    <!-- Deuxième élément de menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FRESH THUNA"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Image et Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sann3"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thon,oignon rouge,tomate,laitue"
                android:textSize="14sp"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </LinearLayout>


    <!-- Deuxième élément de menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DINDY"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Image et Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sann4"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinde,oignon,laitue,fromage cheddar,mozarella"
                android:textSize="14sp"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </LinearLayout>



    <!-- Deuxième élément de menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THE FARMER"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Image et Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Image -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sann5"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poulet ,tomate et cream cheese  "
                android:textSize="14sp"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <!-- Ajoutez plus de LinearLayouts pour d'autres éléments du menu de pizza -->
</LinearLayout>